@model FilmsViewModel

<div id="tableWrapper">
    <table id="filmTable" class="hover">
        <tr>
            <th>
                <a class="sortOrder" data-url="/Film/Films?sortOrder=Title" data-target="#tableWrapper">Title</a>
            </th>
            <th>
                @Html.DisplayName("Category")
            </th>
            <th>
                <a class="sortOrder" data-url="/Film/Films?sortOrder=Director" data-target="#tableWrapper">Director</a>
            </th>
            <th>
                <a class="sortOrder" data-url="/Film/Films?sortOrder=Release" data-target="#tableWrapper">Release</a>
            </th>
            <th>
                @Html.DisplayName("Language")
            </th>
            <th>
                @Html.DisplayName("Version")
            </th>
            <th></th>
        </tr>
        @if (Model.Films != null)
        {
            foreach (var item in Model.Films)
            {
                @Html.Partial("FilmDetails", item);
            }
        }
    </table>
    <div class="pager" data-target="#tableWrapper">
        @Html.Partial("_Pagination", Model.Pagination)
    </div>
</div>