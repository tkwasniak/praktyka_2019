@model FilmsViewModel

<div id="filmListWrapper">
    <table id="filmTable" class="hover">
        <tr>
            <th>
                <a class="sortOrder" data-url="/Film/GetFilms?sortOrder=Title" data-target="#filmListWrapper">Title</a>
            </th>
            <th>
                @Html.DisplayName("Category")
            </th>
            <th>
                <a class="sortOrder" data-url="/Film/GetFilms?sortOrder=Director" data-target="#filmListWrapper">Director</a>
            </th>
            <th>
                <a class="sortOrder" data-url="/Film/GetFilms?sortOrder=Release" data-target="#filmListWrapper">Release</a>
            </th>
            <th>
                @Html.DisplayName("Language")
            </th>
            <th>
                @Html.DisplayName("Version")
            </th>
            <th></th>
        </tr>

        @if (Model.Films != null)
        {
            foreach (var item in Model.Films)
            {

                @Html.Partial("_FilmDetails", item);
            }
        }

    </table>

    <div class="pager" data-target="#filmListWrapper">
        @Html.Partial("_Pagination", Model.Pagination)
    </div>
</div>